{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/status/(.*)",
      "dest": "/api/status.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html"
    }
  ]
}